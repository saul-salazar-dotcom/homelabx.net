# Penpot Environment Variables
# Copy this file to .env and fill in with your own values
# DO NOT commit .env files to version control

# PostgreSQL Configuration
POSTGRES_USER=penpot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=penpot

# Penpot Secret Key (used for encryption and session management)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
PENPOT_SECRET_KEY=your_secure_secret_key_here

# Penpot Database Credentials
PENPOT_DATABASE_USERNAME=penpot
PENPOT_DATABASE_PASSWORD=your_secure_password_here

# OIDC Configuration (for Authelia integration)
PENPOT_OIDC_CLIENT_SECRET=your_oidc_client_secret_here
