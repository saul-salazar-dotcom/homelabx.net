# Vikunja Task Management System - Environment Variables
# Copy this file to .env and fill in with your own values
# DO NOT commit .env files to version control

# MySQL/MariaDB Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Vikunja Database Configuration
VIKUNJA_DATABASE_USER=vikunja
VIKUNJA_DATABASE_PASSWORD=your_secure_password_here
VIKUNJA_DATABASE_NAME=vikunja

# Vikunja JWT Secret (used for API token signing)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
VIKUNJA_SERVICE_JWTSECRET=your_secure_jwt_secret_here
